<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link type="text/css" rel="stylesheet" href="../css/materialize.min.css"  media="screen,projection"/>
    <link rel="stylesheet" href="../css/style.css">
    <link rel="shortcut icon" type="image/x-icon" href="../images/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>MATE</title>
  </head>
  <body>

    <div id="overlay">
      <div id="overlay-content">
        <h2>Chat</h2>
      </div>
    </div>

    <%- include("../partials/nav", {browse: false, profile: false, photos: false, messages: true}) %>

    <main class="container">
      <div class="row">
        <div class="col s12 m12">
          <div class="row"> <!-- first row -->
            <div class="col s12 m5 center-children">  <!-- left column -->
              <h5 class="chat">Chat with <%= userName%></h5>
              <a href="/profiles/show/<%= targetUserId%>"><img class="chat-img z-depth-2" src="<%= imagePath%>" /></a>
            </div>

            <div class="col m1">  <!-- middle column -->
              <p hidden id="target-user-id"><%= targetUserId%></p>
              <p hidden id="cur-user-id"><%= curUserId%></p>
              <p hidden id="cur-user-name"><%= curUserName%></p>
            </div>

            <div class="col s12 m6">  <!-- right column -->
              <div id="chat-wrapper">
              <div id="status">Connecting...</div>

                <div id="message-form">
                  <textarea id="message-area" placeholder="Write your message here..." autofocus="true" required>
                  </textarea>
                  <button type="button" class="send" id="send">Send</button>
                  <div id="connect-action">
                    <button type="button" class="connect" id="open">Connect</button>
                    <button type="button" class="disconnect" id="close">Disconnect</button>
                  </div>
                </div> <!-- end message form -->

                <ul id="message-log"></ul>

              </div> <!-- end chat wrapper -->
            </div>
          </div> <!-- end first row -->
        </div>
      </div>
    </main>

    <%- include("../partials/footer") %>
    <script src="../js/site/chat.js"></script>
  </body>
</html>
