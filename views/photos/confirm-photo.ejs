<body>

  <%- include("../partials/nav") %>

  <main class="container">
    <div class="row">
      <div class="col s12 m12 center-children">
        <h4>Photo <%= status%></h4>
        <a href="/photos/show/<%= userId%>" class="tooltipped" data-position="top" data-delay="100" data-tooltip="Return to Photos">
